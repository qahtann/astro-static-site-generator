---
import '../styles/global.css';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { siteConfig } from '@lib/config';
import { generateSEOTags } from '@lib/seo';
import type { SEOProps } from '@lib/types';

interface Props {
  title?: string;
  description?: string;
  seo?: SEOProps;
}

const { title, description, seo = {} } = Astro.props;
const currentUrl = Astro.url.href;
const seoTags = generateSEOTags({ title, description, ...seo }, currentUrl);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{seoTags.title}</title>
    <meta name="title" content={seoTags.title} />
    <meta name="description" content={seoTags.description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={seoTags.openGraph.type} />
    <meta property="og:url" content={seoTags.openGraph.url} />
    <meta property="og:title" content={seoTags.openGraph.title} />
    <meta property="og:description" content={seoTags.openGraph.description} />
    <meta property="og:image" content={seoTags.openGraph.images[0]?.url} />
    <meta property="og:site_name" content={seoTags.openGraph.siteName} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content={seoTags.twitter.card} />
    <meta property="twitter:url" content={seoTags.openGraph.url} />
    <meta property="twitter:title" content={seoTags.twitter.title} />
    <meta property="twitter:description" content={seoTags.twitter.description} />
    <meta property="twitter:image" content={seoTags.twitter.image} />
    {seoTags.twitter.creator && (
      <meta property="twitter:creator" content={seoTags.twitter.creator} />
    )}
    
    <!-- Canonical URL -->
    <link rel="canonical" href={seoTags.canonical} />
    
    <!-- Theme Script (prevent flash) -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 'light';
        document.documentElement.classList.toggle('dark', theme === 'dark');
      })();
    </script>
  </head>
  <body>
    <div class="flex min-h-screen flex-col">
      <Header />
      <main class="flex-1">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
