---
import BaseLayout from '@layouts/BaseLayout.astro';
import { Icon } from 'lucide-astro';
---

<BaseLayout title="Contact" description="Get in touch with us">
  <div class="container-custom py-12">
    <div class="mx-auto max-w-2xl">
      <h1 class="text-4xl font-bold mb-6 text-text-primary">Contact Us</h1>
      <p class="text-lg text-text-secondary mb-8">
        Have a question or want to get in touch? Fill out the form below and we'll get back to you.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <div class="p-6 rounded-lg border border-border bg-bg-secondary">
          <div class="flex items-center gap-3 mb-3">
            <Icon name="mail" size={24} class="text-primary" />
            <h3 class="font-semibold text-text-primary">Email</h3>
          </div>
          <p class="text-sm text-text-secondary">contact@example.com</p>
        </div>

        <div class="p-6 rounded-lg border border-border bg-bg-secondary">
          <div class="flex items-center gap-3 mb-3">
            <Icon name="github" size={24} class="text-primary" />
            <h3 class="font-semibold text-text-primary">GitHub</h3>
          </div>
          <p class="text-sm text-text-secondary">github.com/yourusername</p>
        </div>
      </div>

      <form
        class="space-y-6 p-6 rounded-lg border border-border bg-bg-secondary"
        onsubmit={(e) => {
          e.preventDefault();
          alert('Contact form is a demo feature. In production, this would send an email or submit to a backend API.');
        }}
      >
        <div>
          <label for="name" class="block text-sm font-medium mb-2 text-text-primary">
            Name *
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 rounded-lg border border-border bg-bg-primary text-text-primary placeholder:text-text-secondary focus:outline-none focus:ring-2 focus:ring-primary"
            placeholder="Your name"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium mb-2 text-text-primary">
            Email *
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 rounded-lg border border-border bg-bg-primary text-text-primary placeholder:text-text-secondary focus:outline-none focus:ring-2 focus:ring-primary"
            placeholder="your.email@example.com"
          />
        </div>

        <div>
          <label for="subject" class="block text-sm font-medium mb-2 text-text-primary">
            Subject *
          </label>
          <input
            type="text"
            id="subject"
            name="subject"
            required
            class="w-full px-4 py-3 rounded-lg border border-border bg-bg-primary text-text-primary placeholder:text-text-secondary focus:outline-none focus:ring-2 focus:ring-primary"
            placeholder="What's this about?"
          />
        </div>

        <div>
          <label for="message" class="block text-sm font-medium mb-2 text-text-primary">
            Message *
          </label>
          <textarea
            id="message"
            name="message"
            required
            rows={6}
            class="w-full px-4 py-3 rounded-lg border border-border bg-bg-primary text-text-primary placeholder:text-text-secondary focus:outline-none focus:ring-2 focus:ring-primary resize-none"
            placeholder="Your message..."
          />
        </div>

        <button
          type="submit"
          class="w-full px-6 py-3 rounded-lg bg-primary text-white font-medium hover:opacity-90 transition-opacity"
        >
          Send Message
        </button>
      </form>
    </div>
  </div>
</BaseLayout>
