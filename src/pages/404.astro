---
import BaseLayout from '@layouts/BaseLayout.astro';
import { Icon } from 'lucide-astro';
---

<BaseLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
  <div class="container-custom py-20">
    <div class="mx-auto max-w-2xl text-center">
      <div class="mb-8">
        <Icon name="file-question" size={80} class="mx-auto text-text-secondary mb-4" />
        <h1 class="text-6xl font-bold mb-4 text-text-primary">404</h1>
        <h2 class="text-2xl font-semibold mb-4 text-text-primary">Page Not Found</h2>
        <p class="text-lg text-text-secondary mb-8">
          The page you're looking for doesn't exist or has been moved.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="px-6 py-3 rounded-lg bg-primary text-white font-medium hover:opacity-90 transition-opacity"
        >
          Go Home
        </a>
        <a
          href="/blog"
          class="px-6 py-3 rounded-lg border border-border bg-bg-secondary text-text-primary font-medium hover:bg-bg-primary transition-colors"
        >
          Browse Blog
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
