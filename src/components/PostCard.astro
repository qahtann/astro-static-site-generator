---
import { formatDate } from '@lib/utils';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, publishDate, tags, image } = post.data;
---

<article class="group flex flex-col overflow-hidden rounded-lg border border-border bg-bg-primary shadow-sm transition-all hover:shadow-lg">
  {image && (
    <a href={`/blog/${post.slug}`} class="block overflow-hidden">
      <img
        src={image}
        alt={title}
        class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
    </a>
  )}
  
  <div class="flex flex-1 flex-col p-6">
    <div class="flex flex-wrap gap-2 mb-3">
      {tags.slice(0, 3).map((tag) => (
        <span class="text-xs font-medium px-2 py-1 rounded-full bg-bg-secondary text-text-secondary">
          {tag}
        </span>
      ))}
    </div>
    
    <h2 class="text-xl font-semibold mb-2 text-text-primary group-hover:text-primary transition-colors">
      <a href={`/blog/${post.slug}`}>{title}</a>
    </h2>
    
    <p class="text-sm text-text-secondary mb-4 flex-1 line-clamp-3">
      {description}
    </p>
    
    <div class="flex items-center justify-between text-xs text-text-secondary">
      <time datetime={publishDate.toISOString()}>
        {formatDate(publishDate)}
      </time>
      <a
        href={`/blog/${post.slug}`}
        class="font-medium text-primary hover:underline"
      >
        Read more â†’
      </a>
    </div>
  </div>
</article>
